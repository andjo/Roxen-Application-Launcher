#/bin/sh
case $1 in 
	'')
		echo 
		echo "	### Unsetting debug flag ###"
		export RL_DEBUG=""
		echo
		;;

	-d|--debug)
		echo 
		echo "	### Setting debug flag ###"
		echo
		export RL_DEBUG="-d DEBUG"
		;;
esac

if test "x$RL_WITH_VALA" == x
then
	export RL_WITH_VALA=true
fi

./autogen.sh

#export RL_WITH_VALA=
